@model RegisterVM
@{
    ViewData["Title"] = "SignUp";
}





<section id="register">
    <div class="container">
        <div class="row">

            <div class="col-md-6 offset-md-3">
                <h2 class="text-center text-dark my-5">  </h2>
                <div class="text-center mb-5 text-dark">.</div>
                <h2 class="text-center text-dark my-5"> Sign Up </h2>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="card my-5">
                    <form method="post" asp-action="SignUp" class="card-body cardbody-color p-lg-5">
                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                        </div>
                        <div class="mb-3">
                            <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Username" class="form-control" aria-describedby="emailHelp" placeholder="Username">
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Fullname" class="form-control" aria-describedby="emailHelp" placeholder="Fullname">
                            <span class="text-danger" asp-validation-for="Fullname"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Password" class="form-control" id="password" placeholder="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" id="password" placeholder="ConfirmPassword">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-color px-5 mb-5 w-100">Sign Up</button>
                            @* <a asp-action="SignIn" class="btn btn-color px-5 mb-5 w-100">Go to Sign In</a> *@
                        </div>
                        <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                            <a asp-action="SignIn" class="text-dark fw-bold">
                                Go to Sign In
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>




