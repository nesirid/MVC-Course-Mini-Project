@model IEnumerable<CourseManagement.ViewModels.InstructorVM>

@{
    ViewData["Title"] = "Instructors";
}

<section>
    <div class="mt-5">
        <h1>Instructors</h1>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    </div>

    <div class="mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Photo</th>
                    <th>Social Media 1</th>
                    <th>Social Media 2</th>
                    <th>Social Media 3</th>
                    <th>Expertise</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.PhotoUrl))
                            {
                                <img src="@item.PhotoUrl" alt="@item.Name" style="width: 100px; height: 100px;" />
                            }
                            else
                            {
                                <span>No photo available</span>
                            }
                        </td>
                        <td>@item.SocialMedia1</td>
                        <td>@item.SocialMedia2</td>
                        <td>@item.SocialMedia3</td>
                        <td>@item.Expertise</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>