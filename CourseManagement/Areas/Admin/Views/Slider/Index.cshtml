@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider Items";
}
<section>
    <div class="mt-5">
        <h1>Slider Items</h1>
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Function</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" alt="@item.Title" style="width:120px; height:120px;" /></td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>




