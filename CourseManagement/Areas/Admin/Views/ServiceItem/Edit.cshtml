@model CourseManagement.ViewModels.ServiceItemVM

@{
    ViewData["Title"] = "Edit Service Item";
}
<section>

    <div class="mt-5">
        <h1>Edit Service Item</h1>
        <div>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="mt-5">
        <div class="row">
            <div class="col">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="IconFile" class="control-label">Icon</label>
                        <input asp-for="IconFile" type="file" class="form-control" />
                        <span asp-validation-for="IconFile" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.IconUrl))
                        {
                            <img src="@Model.IconUrl" alt="Icon" style="width: 80px; height: 80px;" />
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>



